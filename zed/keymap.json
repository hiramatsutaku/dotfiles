[
  {
    "context": "Editor",
    "bindings": {
      // base_keymap": "Emacs"と合わせて設定
      "ctrl-[": "editor::SetMark",
      // 前の単語を削除
      "ctrl-backspace": "editor::DeleteToPreviousWordStart",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-0": "pane::RevealInProjectPanel",
    },
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "enter": "project_panel::OpenPermanent",
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-g": "git_panel::ToggleFocus",
    },
  },
  {
    "context": "GitPanel",
    "bindings": {
      "enter": "git_panel::Open",
    },
  },
]
